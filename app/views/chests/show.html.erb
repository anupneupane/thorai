<% title "Chest" %>

<table>

	<%= render(@chest.line_items) %>	
		
	<tr class="total_line">
		<td colspan="2">Total</td>
		<td class="total_cell"><%= number_to_currency(@chest.total_price) %></td>
	</tr>
		
</table>

<%= button_to 'Empty chest', @chest, :method => :delete, :confirm => 'Are you sure?' %>
<% title "Merchants" %>

<table>
  <tr>
    <th>Category</th>
    <th>Name</th>
  </tr>
  <% for merchant in @merchants %>
    <tr>
      <td><%= link_to merchant.name, merchant %></td>
      <td><%= merchant.sub_category.name %></td>
      <td><%= link_to "Edit", edit_merchant_path(merchant) %></td>
      <td><%= link_to "Destroy", merchant, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Merchant", new_merchant_path %></p>

<% title "New Invitation" %>

<%= form_for @invitation do |f| %>

  <p>
    <%= f.label :recipient_email, "Friend's email" %><br />
    <%= f.text_field :recipient_email %>
  </p>
  <p>
    <%= f.label :message %><br />
    <%= f.text_area :message, :rows => 5 %>
  </p>
  <p><%= f.submit "Invite" %></p>
<% end %>


